# vim: filetype=neomuttrc

# Reload configuration
macro generic,index,pager,editor ,<Space> ":source ~/.config/neomutt/neomuttrc\n" "Reload mutt's configuration file"

# Vi Key Bindings

# Moving around
bind attach,browser,index       g   noop
bind attach,browser,index       gg  first-entry
bind attach,browser,index       G   last-entry
bind pager                      g  noop
bind pager                      gg  top
bind pager                      G   bottom
bind pager                      k   previous-line
bind pager                      j   next-line

# Scrolling
bind attach,browser,pager,index \CF next-page
bind attach,browser,pager,index \CB previous-page
bind attach,browser,pager,index \Cu half-up
bind attach,browser,pager,index \Cd half-down
bind browser,pager              \Ce next-line
bind browser,pager              \Cy previous-line
bind index                      \Ce next-line
bind index                      \Cy previous-line

bind pager,index                d   noop
bind pager,index                dd  delete-message

# Mail & Reply
bind index			<Return> display-message
bind index			<Right> display-message
bind index			x	toggle-new
bind index,pager                \Cr	list-reply
bind index,pager                R	group-reply
bind index,pager		\Cm	compose-to-sender

# Attachments list
bind attach <Left> exit
bind attach <Right> view-text

# Threads
bind browser,pager,index        N   search-opposite
bind index			<Backtab> previous-new-then-unread
bind pager,index                dT  delete-thread
bind pager,index                dt  delete-subthread
bind pager,index                gt  next-thread
bind pager,index                gT  previous-thread
bind index                      za  collapse-thread
bind index                      zA  collapse-all # Missing :folddisable/foldenable

# Mouse scroll inside the message rather than the index
bind pager			<up>	previous-line
bind pager			<down>	next-line

# Sidebar
bind index,pager <C-Up>		sidebar-prev
bind index,pager <C-Down>	sidebar-next
bind index,pager <C-Right>	sidebar-open
bind index,pager K		sidebar-prev
bind index,pager J		sidebar-next
bind index,pager L		sidebar-open

# Remap bounce-message function to “B”
bind index,pager b noop
bind index,pager B bounce-message
#
# Move message to Junk
macro index,pager X ":echo 'Moving to Junk'\n:set confirmappend=no delete=yes\n<tag-prefix><save-message>=INBOX/Junk\n:set confirmappend=yes delete=ask-yes\n:echo 'Moved to Junk'\n" "Move to Junk"
